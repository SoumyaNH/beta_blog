<%- model_class = Country -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>


<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:cname) %></th>
      <th><%= model_class.human_attribute_name(:cstate) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <p>
    <%= will_paginate @countries %>
    </p>
    <% @countries.each do |country| %>
      <tr>
        <td><%= link_to country.id, country_path(country) %></td>
        <td><%= country.cname %></td>
        <td><%= country.cstate %></td>
        <td><%=l country.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      country_path(country), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_country_path(country), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      country_path(country),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_country_path,
            :class => 'btn btn-primary' %>
<br><br>
<%= link_to t('.pages', :default => t("helpers.links.pages")),
                      root_path,
                      :class => 'btn btn-primary' %>
